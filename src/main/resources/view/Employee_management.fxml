        <GridPane hgap="12" layoutX="40" layoutY="380" vgap="12">
            <columnConstraints>
                <ColumnConstraints minWidth="100" />
                <ColumnConstraints minWidth="180" />
                <ColumnConstraints minWidth="100" />
                <ColumnConstraints minWidth="180" />
            </columnConstraints>

            <children>
                <Label style="-fx-text-fill: #cdd9ec;" text="Employee ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtEmployeeId" promptText="E001" style="-fx-background-color: #141d2c; -fx-border-color: #263248; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label style="-fx-text-fill: #cdd9ec;" text="Name:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="txtName" promptText="Full Name" style="-fx-background-color: #141d2c; -fx-border-color: #263248; -fx-text-fill: white;" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label style="-fx-text-fill: #cdd9ec;" text="NIC:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtNic" promptText="National ID" style="-fx-background-color: #141d2c; -fx-border-color: #263248; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label style="-fx-text-fill: #cdd9ec;" text="DOB:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
