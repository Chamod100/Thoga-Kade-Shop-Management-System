<AnchorPane prefHeight="640.0" prefWidth="950" style="-fx-background-color: linear-gradient(#0a1018, #101b2d); -fx-font-family: 'Segoe UI';" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EmployeeManagementController">

    <children>
        <Label layoutX="36.0" layoutY="25.0" style="-fx-text-fill: #f4f7fb; -fx-font-size: 22px; -fx-font-weight: bold;" text="ðŸ‘¨â€ðŸ’¼ Employee Management" />

