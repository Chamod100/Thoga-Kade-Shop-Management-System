                <TableColumn prefWidth="80" text="ID" />
                <TableColumn prefWidth="150" text="Name" />
                <TableColumn prefWidth="110" text="NIC" />
                <TableColumn prefWidth="100" text="DOB" />
                <TableColumn prefWidth="120" text="Position" />
                <TableColumn prefWidth="100" text="Salary" />
                <TableColumn prefWidth="100" text="Contact" />
                <TableColumn prefWidth="150" text="Address" />
                <TableColumn prefWidth="100" text="Joined Date" />
                <TableColumn prefWidth="80" text="Status" />
            </columns>
