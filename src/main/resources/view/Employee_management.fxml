                <Label style="-fx-text-fill: #cdd9ec;" text="Salary:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="txtSalary" promptText="75000.00" style="-fx-background-color: #141d2c; -fx-border-color: #263248; -fx-text-fill: white;" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                <Label style="-fx-text-fill: #cdd9ec;" text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="txtContact" promptText="07XXXXXXXX" style="-fx-background-color: #141d2c; -fx-border-color: #263248; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label style="-fx-text-fill: #cdd9ec;" text="Address:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
