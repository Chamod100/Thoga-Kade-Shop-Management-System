        <HBox layoutX="40.0" layoutY="584.0" spacing="15">
            <Button fx:id="btnAdd" prefHeight="28.0" prefWidth="74.0" style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;" text="Add" />
            <Button fx:id="btnUpdate" prefHeight="28.0" prefWidth="74.0" style="-fx-background-color: #38b000; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;" text="Update" />
